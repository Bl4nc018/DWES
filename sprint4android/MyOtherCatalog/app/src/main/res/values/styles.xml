<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo de la aplicaciÃ³n -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Color del fondo -->
        <item name="android:windowBackground">@color/colorFondo</item>
    </style>

    <!-- Estilo del texto -->
    <style name="TextoEstilo">
        <!-- Modificar el color del texto -->
        <item name="android:textColor">@color/colorTexto</item>
    </style>

    <!-- Estilo de los botones -->
    <style name="BotonEstilo" parent="Widget.AppCompat.Button">
        <!-- Modificar el estilo de los botones -->
        <item name="android:background">@color/colorTexto</item>
        <!-- Ajustar la anchura y altura para que sea cuadrado -->
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


</resources>

